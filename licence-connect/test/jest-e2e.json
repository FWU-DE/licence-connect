{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@licences/(.*)$": "<rootDir>/src/licences/$1",
    "^@vidis/(.*)$": "<rootDir>/src/vidis/$1",
    "^@ucs/(.*)$": "<rootDir>/src/ucs/$1",
    "^@licence-management/(.*)$": "<rootDir>/src/licence-management/$1",
    "^@cross-cutting-concerns/(.*)$": "<rootDir>/src/cross-cutting-concerns/$1"
  }
}
